{
  "name": "api-petstore-testing-framework",
  "version": "1.0.0",
  "description": "PETSTORES API automation testing framework",
  "main": "index.js",
  "author": "Islam Taha (0xIslamTaha)",
  "license": "MIT",
  "scripts": {
    "test": "mocha src/**/*.spec.ts --timeout 10000 --reporter mochawesome-with-mocha",
    "test:parallel": "mocha src/**/*.spec.ts --timeout 10000 --parallel",
    "regression": "mocha src/**/*.spec.ts --grep @Regression --timeout 10000",
    "lint": "npx eslint src",
    "lint:fix": "npx eslint src --fix",
    "prettify": "npx prettier --write src"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "axios": "^1.9.0",
    "axios-logger": "^2.8.1",
    "chai": "^5.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-ui-testing": "^2.0.1",
    "mocha": "^11.4.0",
    "mochawesome-with-mocha": "^8.0.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "ajv": "^8.11.0",
    "dotenv": "^16.0.0"
  },
  "type": "module"
}
